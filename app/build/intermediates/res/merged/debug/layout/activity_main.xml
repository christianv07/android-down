<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout"
    android:baselineAligned="false">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.christianv07.dev.speedy.MainActivity"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:weightSum="1"
        android:padding="8sp"    >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/floatingtext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/txtFile"
                    android:hint="@string/sFileSize" />

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:spinnerMode="dropdown"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/spinner1"
                android:layout_weight="30"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/floatingtext3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/txtSpeed"
                    android:hint="@string/sEstSpeed" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:spinnerMode="dropdown"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/spinner2"
                android:layout_weight="30" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp">

            <android.support.v7.widget.AppCompatSeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:max="100"
                android:layout_weight="70"
                android:layout_gravity="center_vertical"
                android:indeterminate="false" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/sProgress"
                    android:textSize="12dp"
                    android:id="@+id/lblProgress"
                    android:layout_weight="4"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/textColorSecondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/sBarPercentage"
                    android:id="@+id/lblPercent"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:layout_weight="7"
                    android:textColor="@color/textColorSecondary" />
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="120sp"
            android:layout_height="60sp"
            android:text="@string/sBtnCalculate"
            android:id="@+id/btnCalculate"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <TextView
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/fyi"
                android:id="@+id/txtFYI"
                android:textColor="#bdbdbd"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>