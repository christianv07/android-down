<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <requestFocus />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinatorLayout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardElevation="2dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/contraintlayout_main_cardview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_cardView_seconds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="00"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView_cardView_minutes"
                    app:layout_constraintLeft_toRightOf="@+id/separator_minutes_seconds" />

                <TextView
                    android:id="@+id/separator_minutes_seconds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView_cardView_minutes"
                    app:layout_constraintLeft_toRightOf="@+id/textView_cardView_minutes" />

                <TextView
                    android:id="@+id/separator_hour_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:text=":"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView_cardView_minutes"
                    app:layout_constraintRight_toLeftOf="@+id/textView_cardView_minutes" />

                <TextView
                    android:id="@+id/textView_cardView_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:text="00"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView_header" />

                <TextView
                    android:id="@+id/textView_cardView_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:text="00"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView_cardView_minutes"
                    app:layout_constraintRight_toLeftOf="@+id/separator_hour_minutes" />

                <TextView
                    android:id="@+id/cardView_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Time"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/floatingtext_filesize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/spinner_filesize"
            app:layout_constraintTop_toBottomOf="@+id/cardView_main"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edittext_filesize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/sFileSize"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekbar_main_downloaded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:indeterminate="false"
            android:max="100"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_progress"
            tools:layout_conversion_absoluteHeight="18dp"
            tools:layout_conversion_absoluteWidth="257dp"
            tools:layout_conversion_absoluteX="8dp"
            tools:layout_conversion_absoluteY="158dp" />


        <TextView
            android:id="@+id/textview_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/sProgress"
            android:textColor="@color/textColorSecondary"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/floatingtext_estimatedspeed"
            tools:layout_conversion_absoluteHeight="18dp"
            tools:layout_conversion_absoluteWidth="48dp"
            tools:layout_conversion_absoluteX="296dp"
            tools:layout_conversion_absoluteY="142dp" />

        <TextView
            android:id="@+id/textview_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/sBarPercentage"
            android:textAlignment="center"
            android:textColor="@color/textColorSecondary"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textview_progress"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_conversion_absoluteHeight="32dp"
            tools:layout_conversion_absoluteWidth="23dp"
            tools:layout_conversion_absoluteX="309dp"
            tools:layout_conversion_absoluteY="160dp" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/floatingtext_estimatedspeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/spinner_estimatedspeed"
            app:layout_constraintTop_toBottomOf="@+id/floatingtext_filesize"
            tools:layout_conversion_absoluteHeight="54dp"
            tools:layout_conversion_absoluteWidth="257dp"
            tools:layout_conversion_absoluteX="8dp"
            tools:layout_conversion_absoluteY="72dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edittext_estimatedSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/sEstSpeed"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_filesize"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/floatingtext_filesize"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/floatingtext_filesize"
            tools:ignore="RtlHardcoded" />

        <Spinner
            android:id="@+id/spinner_estimatedspeed"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/floatingtext_estimatedspeed"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/floatingtext_estimatedspeed" />


    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:tint="@android:color/white"
        app:fabSize="normal"
        app:layout_anchor="@+id/coordinatorLayout_main"
        app:layout_anchorGravity="bottom|right"
        app:srcCompat="?attr/actionModeShareDrawable" />

</android.support.design.widget.CoordinatorLayout>